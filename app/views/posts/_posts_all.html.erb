<% @posts.each do |post| %>
  <div class="posts-main-box">

    <% if post.title.present? %>

    <!-- タイトル -->
    <div class="posts-title-id">
      <p><%= post.title %></p>
    </div>
    <% end %>
    
    <!-- 作成日時 -->
    <div class="posts-timestamp-id">
      <p><%= post.created_at %></p>
    </div>

    <div class='submenu'>
      <!-- ブックマーク -->
      <div class="posts-submenu-id">
        <div id = "bookmark_button_<%= post.id %>">
          <%= render "bookmarks/bookmark", post: post %>
        </div>
      </div>

      <!-- 編集 -->
      <div class="posts-submenu-id">
        <%= link_to post_path(post.id), method: :get, class: 'btn btn-default' do %>
          <i class="fa-regular fa-file-lines", style="color : #26342c"></i>
        <% end %>
      </div>

      <!-- 削除 -->
      <div class="posts-submenu-id">
        <%= link_to post_path(post.id), method: :delete, class: 'btn btn-default' do  %>
          <i class="fa-solid fa-trash", style="color : #26342c"></i>
        <% end %>
      </div>

      <!-- 詳細表示 -->
      <div class="posts-submenu-id">
        <%= link_to edit_post_path(post.id), method: :get, class: 'btn btn-default' do  %>
          <i class="fa-solid fa-pen-to-square", style="color : #26342c"></i>
        <% end %>
      </div>
</div>
     
    <div class="posts-text-id">
     <!-- 本文 -->
      <%=safe_join(post.text.split("\n"),tag(:br))%>
      <!-- 画像 -->
      <div class="posts-image-id">
        <% post.images.each do |image| %>
          <div class="posts-image-all">
          <%= image_tag(image) %>
          </div>
        <% end %>
      </div>
      
      <div class="posts-sub_box">
        <!-- カテゴリー -->
        <div class="posts-category-id">
          <p>
            <i class="fa-regular fa-folder"></i>
            <%= post.category.genre %>
          </p>
        </div>

        <!-- タグ -->
        <div class="posts-tag-id">
          <% post.tags.each do |tag| %>
            <div class='posts-tag-one'>
              <%= '#' + tag.tag_name if post.tags.first.present? %>
            </div>
          <% end %>
        </div>
      </div>
      
    </div>

  </div>
<% end %>
