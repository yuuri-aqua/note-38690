<div class="posts-id-all">
  <% @posts.each do |post| %>
    <div class="posts-id">

      <div class="posts-title-id">
        <p><%= post.title %></p>
      </div>

      <div class="posts-timestamp-id">
        <p><%= post.created_at %></p>
      </div>

      <div class="posts-text-id">
        <p><%=safe_join(post.text.split("\n"),tag(:br))%></p>
        
        <%= image_tag post.image.variant(resize: '400x400'), class: 'pasts-image-id' if post.image.attached? %>
      </div>

    </div>
  <% end %>
    
</div>
