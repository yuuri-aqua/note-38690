<div class='main-header'>
  <div class='nav'>
    <%= link_to image_tag("logo_mini.png", class:"logo_mini"), root_path %>
    <% if user_signed_in? %>
      <%= link_to current_user.nickname + "'s Note", posts_path, class: "logo" %>
    <% else %>
      <%= link_to "Note To Self +", root_path, class: "logo" %>
    <% end %>
  </div>
      


    <% if user_signed_in? %>
      <ul class='lists-right'>
        <li>
          <i class="fa-solid fa-pen-nib", style="color : #80791d"></i>
          <%= link_to "投稿する", new_post_path, class: "new_nav" %>
        </li>

        <li>
          <i class="fa-regular fa-user", style="color : #b1ab9f"></i>
          <%= link_to current_user.nickname, posts_path, class: "user-nickname" %>
        </li>

        <li>
          <i class="fa-solid fa-right-from-bracket", style="color : #b1ab9f"></i>
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %>
        </li>
      </ul>
    <% else %>
      <ul class='lists-right'>
        <li>
          <i class="fa-solid fa-right-to-bracket", style="color : #b1ab9f"></i>
          <%= link_to 'ログイン', new_user_session_path, class: "login" %>
        </li>
        
        <li>
          <i class="fa-solid fa-user-plus", style="color : #b1ab9f"></i>
          <%= link_to '新規登録', new_user_registration_path, class: "sign-up" %>
        </li>
      </ul>
    <% end %>


</div>